<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_madeira"
    tools:context=".MainActivity">

    <!-- Ícone de Configurações -->
    <ImageView
        android:id="@+id/icon_settings"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_sevenson"
        app:layout_constraintTop_toBottomOf="@+id/icon_settings"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botões -->
    <Button
        android:id="@+id/btn_agendar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Agendar"
        android:backgroundTint="#B67A00"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_agenda"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#B67A00"
        android:text="Serviços"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_agendar" />

    <Button
        android:id="@+id/btn_comandas"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#B67A00"
        android:text="Unidades"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_agenda" />

    <Button
        android:id="@+id/btn_avaliacoes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Avaliações"
        android:backgroundTint="#B67A00"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_comandas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_notificacoes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#B67A00"
        android:text="Alunos"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_avaliacoes" />

    <!-- Ícones de Redes Sociais -->
    <ImageView
        android:id="@+id/icon_facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_facebook"
        app:layout_constraintEnd_toStartOf="@id/icon_instagram"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/icon_instagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>